@using Collections.Web.ViewModels.Home
@model HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>

<br>

<div class="text-center">
    <h4>Latest items</h4>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Collection</th>
            <th>Author</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.LatestItems)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Collection</td>
                <td>@item.Author</td>
            </tr>
        }
    </tbody>
</table>

<div class="text-center">
    <h4>Top 5 largest collections</h4>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Author</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.LargestCollections)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Category</td>
                <td>@item.Author</td>
            </tr>
        }
    </tbody>
</table>