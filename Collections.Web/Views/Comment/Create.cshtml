@using Collections.Web.ViewModels.Comment
@model CreateCommentViewModel

@{
    ViewData["Title"] = "Create comment";
}

<div class="card">
    <div class="card-header">
        <h3 class="text-uppercase">New comment</h3>
    </div>
    <div class="card-body">
        <form asp-action="Create" asp-controller="Comment">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Text" class="control-label"></label>
                        <textarea asp-for="Text" class="form-control"></textarea>
                        <span asp-validation-for="Text" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-sm btn-primary rounded-0" />
            </div>
        </form>
    </div>
</div>