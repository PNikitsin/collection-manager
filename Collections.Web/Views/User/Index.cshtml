@model IEnumerable<Collections.Domain.Entities.Collection>

@{
    ViewData["Title"] = "My collections";
}

<a asp-controller="Collection" asp-action="Create" class="btn btn-sm btn-primary">Create a new collection</a>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="~/Uploads/@item.CollectionPicture" asp-append-version="true" alt="@item.Name" />
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <a asp-action="Details" asp-controller="Collection" asp-route-id="@item.Id" class="btn btn-sm btn-primary">View details</a>
                </div>
            </div>
        </div>
    }
</div>